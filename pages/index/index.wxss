/* pages/movie/movie.wxss */
page{
    background: #f3f5f7;
}
.movie-item{
    background: #fff;
    padding-top: 30rpx;
    margin-bottom: 30rpx;
}

.title{
    border-left: 5px solid #7C6146;
    margin-bottom: 30rpx;
    font-size: 28rpx;
    padding: 0 15rpx 0 10rpx;
    font-weight: bold; 
}
.title .more{
    float: right;
    font-weight: normal;
    color: #7C6146;
    font-size: 24rpx;
}
.list-wrap{
    width: 100%;
    overflow: hidden;
}
.list{
    /* display: flex; */
    display: block;
    white-space: nowrap;
    width: 100%;
    height: 400rpx;
    padding-left: 20rpx;
}
.list-box{
    display: inline-block;
}
.list .list-item{
    display: inline-block;
    margin-right: 20rpx;
    vertical-align: top;
    width: 200rpx;
}
.list .list-item .image{
    width: 200rpx;
    height: 280rpx;
    vertical-align: top;
    margin-bottom: 20rpx;
}
.list .list-item .name{
    font-size: 28rpx;
    overflow: hidden;
    text-overflow: ellipsis;
}
.rating{
    font-size: 24rpx;
    margin-top: 10rpx;
    color: #888;
}

.search{
    position: relative;
    box-sizing: border-box;
    width: 100%;
    padding: 20rpx;
    background: #7C6146;
}
.search .input{
    box-sizing: border-box;
    height: 28px;
    background: #fff;
    padding: 5rpx;
    border-radius: 8rpx;
}
.search .search-show{
    position: absolute;
    top: 20rpx;
    z-index: 1;
    width: 200rpx;
    left: 50%;
    height: 28px;
    line-height: 28px;
    margin-left: -100rpx;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
}
.search .search-show .icon{
    margin-right: 10rpx;
    height: 28px;
    vertical-align: top;
    display: flex;
    justify-content: center;
    align-items: center;
}
.search .search-show .text{
    font-size: 28rpx;
    height: 60rpx;
    line-height: 60rpx;
    color: #999;
}