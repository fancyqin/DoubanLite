/* pages/movie/movie.wxss */
page{
    background: #f3f5f7;
}
.movie-item{
    background: #fff;
    padding-top: 30rpx;
    margin-bottom: 30rpx;
}

.title{
    border-left: 5px solid #67bb62;
    margin-bottom: 30rpx;
    font-size: 28rpx;
    padding: 0 15rpx 0 10rpx;
    font-weight: bold; 
}
.title .more{
    float: right;
    font-weight: normal;
    color: #1aad19;
    font-size: 24rpx;
}
.list-wrap{
    width: 100%;
    overflow: hidden;
}
.list{
    /* display: flex; */
    display: block;
    white-space: nowrap;
    width: 100%;
    height: 400rpx;
    padding-left: 20rpx;
}
.list .list-item{
    display: inline-block;
    margin-right: 20rpx;
    vertical-align: top;
    width: 200rpx;
}
.list .list-item .image{
    width: 200rpx;
    height: 280rpx;
    vertical-align: top;
    margin-bottom: 20rpx;
}
.list .list-item .name{
    font-size: 28rpx;
    overflow: hidden;
    text-overflow: ellipsis;
}
.rating{
    font-size: 24rpx;
    margin-top: 10rpx;
    color: #888;
}
.allstar50,.allstar45,.allstar40,.allstar35,.allstar30,.allstar25,.allstar20,.allstar15,.allstar10,.allstar05,.allstar00 {
    display: inline-block;
    background: url(data:image/png;base64,) no-repeat;
    width: 55px;
    height: 11px;
    margin: 0 3px 0 0;
    overflow: hidden;
}

.allstar50 {
    background-position: 0 0px
}

.allstar45 {
    background-position: 0 -11px
}

.allstar40 {
    background-position: 0 -22px
}

.allstar35 {
    background-position: 0 -33px
}

.allstar30 {
    background-position: 0 -44px
}

.allstar25 {
    background-position: 0 -55px
}

.allstar20 {
    background-position: 0 -66px
}

.allstar15 {
    background-position: 0 -77px
}

.allstar10 {
    background-position: 0 -88px
}

.allstar05 {
    background-position: 0 -99px
}

.allstar00 {
    background-position: 0 -110px
}